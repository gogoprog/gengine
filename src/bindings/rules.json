[
    {
        "root": "../../deps/common/Urho3D/build/linux/release/",
        "include-relative": "../../deps/common/Urho3D/Source",
        "include-dirs": [
            "../../deps/common/Urho3D/build/linux/release/include",
            "../../deps/common/Urho3D/build/linux/release/include/Urho3D/ThirdParty"
        ],
        "files": [
            "*/Urho3D/Graphics/*.h"
        ],
        "excluded-files": [
            "*Direct3D*",
            "*Zone*"
        ],
        "base": "Component",
        "output":[
            {
                "template": "templates/component.hx.mustache",
                "rule": "file-per-class",
                "path": "generated/haxe/gengine/components/{{class_name}}.hx",
                "types":
                {
                    "unsigned int" : "Int",
                    "unsigned char": "Int",
                    "LightType": "Int",
                    "AnimationBlendMode": "Int",
                    "FaceCameraMode": "Int",
                    "AutoRemoveMode": "Int",
                    "TrailType": "Int",
                    "FillMode": "Int"
                }
            },
            {
                "template": "templates/bindings.cpp.mustache",
                "rule": "single-file",
                "path": "generated/cpp/bindings.cpp"
            }
        ],
        "excluded-types":[
            "RayOctreeQuery",
            "Geometry",
            "FrameInfo",
            "UpdateGeometryType",
            "OctreeQuery",
            "StringHash",
            "TypeInfo",
            "AttributeInfo",
            "const void *",
            "OcclusionBuffer",
            "DebugRenderer",
            "Plane",
            "BoundingBox",
            "Vector",
            "Matrix4",
            "Octant",
            "Frustum",
            "PODVector",
            "Matrix3x4",
            "Ray",
            "FocusParameters",
            "Vector4",
            "LightBatchQueue",
            "SharedArrayPtr",
            "VertexBuffer",
            "ResourceRef",
            "ResourceRefList",
            "Deserializer",
            "XMLElement",
            "JSONValue",
            "VariantVector",
            "Zone"
        ]
    }
]
